<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.onix.internship.backgroundanimationtask.ui.fragment.main.MainScreenViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.main.MainScreenFragment">

        <com.onix.internship.backgroundanimationtask.ui.view.CustomAnimationView
            android:id="@+id/animationView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/imageAnimationLayout"
            app:layout_constraintTop_toTopOf="parent"/>

        <FrameLayout
            android:id="@+id/imageAnimationLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/animationView"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/translationOneImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/star"
                android:translationX="@{viewModel.model.translationOne}"/>

            <ImageView
                android:id="@+id/translationTwoImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/star"
                android:translationX="@{viewModel.model.translationTwo}"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>